---
import Container from "@/components/container.astro";
import Link from "@/components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "商品",
    path: "/products",
  },
  {
    title: "イベント",
    path: "/events",
  },
  {
    title: "About",
    path: "/about",
  },
  {
    title: "サポート",
    path: "/support",
  },
  {
    title: "ラボ",
    path: "/lab",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="flex items-center gap-2">
          <img src="/images/logo.svg" alt="大崎商会" class="h-10 w-auto" />
          <span class="font-bold text-brand-main text-xl lg:hidden">大崎商会</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-brand-sub" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-brand-sub hover:text-brand-main transition-colors">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-brand-accent rounded-full">     
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <a href="https://osaki-vrc.booth.pm/" target="_blank" class="block">
            <img src="/images/booth-logo.svg" alt="Booth" class="h-8 w-auto" />
          </a>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <a href="https://osaki-vrc.booth.pm/" target="_blank" class="hover:opacity-80 transition-opacity">
          <img src="/images/booth-logo.svg" alt="Booth" class="h-10 w-auto" />
        </a>
      </div>
    </div>
  </header>
</Container>
