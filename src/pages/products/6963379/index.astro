function parseMarkdown(md: string): string {
  if (!md) return '';
  const lines = md.split('\n');
  const result: string[] = [];
  let listStack: number[] = [];
  
  const getIndent = (line: string): number => {
    if (line.startsWith('      - ')) return 3;
    if (line.startsWith('    - ')) return 2;
    if (line.startsWith('  - ')) return 1;
    if (line.trim().startsWith('- ')) return 0;
    return -1;
  };
  
  const closeListsToLevel = (targetLevel: number) => {
    while (listStack.length > 0 && listStack[listStack.length - 1] >= targetLevel) {
      listStack.pop();
      result.push('</ul>');
    }
  };
  
  const closeAllLists = () => {
    while (listStack.length > 0) {
      listStack.pop();
      result.push('</ul>');
    }
  };
  
  for (let i = 0; i < lines.length; i++) {
    const line = lines[i];
    const trimmed = line.trim();
    const indent = getIndent(line);
    
    if (!trimmed) {
      closeAllLists();
      result.push('');
      continue;
    }
    
    if (trimmed.startsWith('### ')) {
      closeAllLists();
      result.push('<h3>' + trimmed.substring(4) + '</h3>');
      continue;
    }
    if (trimmed.startsWith('## ')) {
      closeAllLists();
      result.push('<h2>' + trimmed.substring(3) + '</h2>');
      continue;
    }
    if (trimmed.startsWith('# ')) {
      closeAllLists();
      result.push('<h1>' + trimmed.substring(2) + '</h1>');
      continue;
    }
    
    if (indent >= 0) {
      const content = trimmed.substring(2);
      if (listStack.length > 0 && indent < listStack[listStack.length - 1]) {
        closeListsToLevel(indent + 1);
      }
      if (listStack.length === 0 || indent > listStack[listStack.length - 1]) {
        result.push('<ul>');
        listStack.push(indent);
      }
      result.push('<li>' + content);
      const nextIndent = i + 1 < lines.length ? getIndent(lines[i + 1]) : -1;
      if (nextIndent <= indent || nextIndent === -1) {
        result.push('</li>');
      }
      continue;
    }
    
    closeAllLists();
    result.push('<p>' + trimmed + '</p>');
  }
  
  closeAllLists();
  return result.join('\n');
}

