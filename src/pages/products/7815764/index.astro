function parseMarkdown(md: string): string {
  if (!md) return '';
  const lines = md.split('\n');
  const result: string[] = [];
  let listStack: number[] = []; // „Ç§„É≥„Éá„É≥„Éà„É¨„Éô„É´„ÅÆ„Çπ„Çø„ÉÉ„ÇØ

  const linkify = (text: string) => {
    return text.replace(/(https?:\/\/[^\s]+)/g, '<a href="$1" target="_blank" rel="noopener noreferrer" class="content-link">$1</a>');
  };
  
  for (let i = 0; i < lines.length; i++) {
    const line = lines[i];
    const trimmed = line.trim();
    
    if (!trimmed) {
      while (listStack.length > 0) { listStack.pop(); result.push('</ul>'); }
      result.push('');
      continue;
    }

    // „Éò„ÉÉ„ÉÄ„ÉºÂà§ÂÆö
    if (trimmed.startsWith('#')) {
      while (listStack.length > 0) { listStack.pop(); result.push('</ul>'); }
      if (trimmed.startsWith('### ')) { result.push('<h3>' + linkify(trimmed.substring(4)) + '</h3>'); continue; }
      if (trimmed.startsWith('## ')) { result.push('<h2>' + linkify(trimmed.substring(3)) + '</h2>'); continue; }
      if (trimmed.startsWith('# ')) { result.push('<h1>' + linkify(trimmed.substring(2)) + '</h1>'); continue; }
    }

    // „É™„Çπ„Éà„Ç¢„Ç§„ÉÜ„É†Âà§ÂÆö (- „ÅßÂßã„Åæ„ÇãË°å)
    const listMatch = line.match(/^(\s*)-\s+(.*)/);
    if (listMatch) {
      const currentIndent = listMatch[1].length;
      const content = listMatch[2];

      // „Ç§„É≥„Éá„É≥„Éà„ÅåÊ∏õ„Å£„ÅüÂ†¥Âêà„ÄÅ„Çπ„Çø„ÉÉ„ÇØ„ÇíÈñâ„Åò„Çã
      while (listStack.length > 0 && currentIndent < listStack[listStack.length - 1]) {
        listStack.pop();
        result.push('</ul>');
      }

      // Êñ∞„Åó„ÅÑ„É¨„Éô„É´„ÅÆ„É™„Çπ„Éà„ÇíÈñãÂßã
      if (listStack.length === 0 || currentIndent > listStack[listStack.length - 1]) {
        result.push('<ul>');
        listStack.push(currentIndent);
      }

      // È†ÖÁõÆ„ÇíÈñãÂßã
      result.push('<li>' + linkify(content));
      
      // Ê¨°„ÅÆË°å„ÅåÂêå„Åò„É¨„Éô„É´„ÅÆÁ∂ôÁ∂öË°å„Åã„Å©„ÅÜ„ÅãÂà§ÂÆö
      let isContinued = false;
      if (i + 1 < lines.length) {
        const nextLine = lines[i + 1];
        if (nextLine.trim() && !nextLine.trim().startsWith('-') && !nextLine.trim().startsWith('#')) {
          const nextIndent = nextLine.match(/^(\s*)/)![0].length;
          if (nextIndent >= currentIndent + 2) isContinued = true;
        }
      }
      if (!isContinued) result.push('</li>');
      continue;
    }

    // „É™„Çπ„Éà„ÅÆÁ∂ôÁ∂öË°åÂà§ÂÆö
    if (listStack.length > 0) {
      const currentIndent = line.match(/^(\s*)/)![0].length;
